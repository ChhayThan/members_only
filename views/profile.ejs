<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= locals.title %></title>
    <link rel="stylesheet" href="/reset.css" />
    <link rel="stylesheet" href="/global.css" />
  </head>
  <body>
    <%- include('./partials/navBar') %> <%- include('./partials/errors.ejs') %>

    <div class="profileContainer">
      <% if (locals.currentUser) { %>
      <form action="/profile" method="post">
        <fieldset>
          <legend>Profile</legend>
          <label for="first_name">First name</label>
          <input
            id="first_name"
            name="first_name"
            placeholder="John"
            type="text"
            value="<%= currentUser.first_name %>"
          />
          <label for="last_name">Last name</label>
          <input
            id="last_name"
            name="last_name"
            placeholder="Doe"
            type="text"
            value="<%= currentUser.last_name %>"
          />
          <label for="email">Email</label>
          <input
            id="email"
            name="email"
            placeholder="example@email.com"
            type="email"
            value="<%= currentUser.email %>"
          />
          <label for="password">Password</label>
          <input id="password" name="password" type="password" />
          <label for="updated_password">Update Password</label>
          <input
            id="updated_password"
            name="updated_password"
            type="password"
          />
          <label for="membership_status">Membership Status</label>
          <input type="checkbox" name="membership_status" id="membership_status"
          // prettier-ignore <% if (locals.currentUser.membership_status) { %>
          checked="true" <% } %> disabled />

          <label for="admin">Admin Access</label>
          <input type="text" name="admin" id="admin" placeholder="Optional" />

          <button>Update</button>
        </fieldset>
      </form>
      <% } else { %>
      <h1>Looks like you are not logged in yet.</h1>
      <h2>
        Please <a href="/login">Login</a> Or <a href="/sign-up">Sign Up!</a>
      </h2>
      <% } %>
    </div>
  </body>
</html>
